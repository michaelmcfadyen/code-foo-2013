import java.io.File;
import java.io.FileNotFoundException;
import java.util.Scanner;


public class WordSearch {
	public static void main(String args[]) throws FileNotFoundException{
		String currword;
		
		File wordsearchFile = new File(System.getProperty("user.dir")+"/word-search.txt");
		Scanner fileScanner = new Scanner(wordsearchFile);
		Scanner rowScanner = new Scanner (wordsearchFile);
		int rows = 0;
		int columns = 0;
		int size = 0;
		while(fileScanner.next().length() == 1){
			System.out.println(fileScanner.next());
			size++;
		}
		while(!rowScanner.nextLine().isEmpty()){
			rows++;
		}
		columns = size/rows;
		System.out.println(size);
		System.out.println("Rows:"+rows);
		System.out.println("Columns:"+columns);
		
		char[][] puzzle = new char[rows][columns];


	}
}
