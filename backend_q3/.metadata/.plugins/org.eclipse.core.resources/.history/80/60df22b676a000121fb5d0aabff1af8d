import java.io.File;
import java.io.FileNotFoundException;
import java.util.ArrayList;
import java.util.Random;
import java.util.Scanner;

public class LetterSwap {
	ArrayList<String> dictionary;

	public int swap() throws FileNotFoundException{

		File file = new File(System.getProperty("user.dir")+"/three-letter-words.txt");
		Scanner lineScanner = new Scanner(file);
		dictionary = new ArrayList<String>();
		while(lineScanner.hasNextLine()){
			dictionary.add(lineScanner.next());
		}

		//get two words from user
		//check if they are in dictionary
		String start;
		String end;
		
		String[] stages = findPath(start, end);
		
		for(String s : stages){
			if(s != null)
				System.out.printf("%s -> ", s);
		}
		return mismatch;
	}	
	public String[] findPath(String start, String end){
		char[] array = start.toCharArray();
		String[] stages = new String[4];
		stages[0] = start;
		int mismatch = 0;
		
		System.out.println("Change "+start + " to " + end);

wordcheck:	for(int i = 0 ; i < start.length(); i++){
loop:			for(int j = 0; j < start.length(); j++){
				if(array[i] != end.charAt(i)){
					array[i] = end.charAt(i);
					if(dictionary.contains(new String(array))){
						mismatch++;
						stages[i+1] = new String(array);
						break loop;
					}
					else
						array[i] = start.charAt(i);
				}
				else
					break loop;
				break wordcheck;
			}
		}
		return stages;
	}

	public static void main(String args[]) throws FileNotFoundException{
		LetterSwap s = new LetterSwap();
		s.swap();

	}
}