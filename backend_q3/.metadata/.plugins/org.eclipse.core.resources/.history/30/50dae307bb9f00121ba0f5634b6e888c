public class LetterSwap {

	public int swap(String a, String b){
		char[] array = a.toCharArray();
		String[] stages = new String[4];
		stages[0] = a;
		int mismatch = 0;
		
		for(int i = 0 ; i < 3; i++){
			if(array[i] != b.charAt(i)){
				mismatch++;
				array[i] = b.charAt(i);
			}
			stages[i+1] = new String(array);
			if(stages.length == i+1){
				System.out.printf("%s\n", stages[i]);
			}
			else
				System.out.printf("%s -> ", stages[i]);
		}
		
		System.out.println(a + " to " + b);
		return mismatch;
	}	

	public static void main(String args[]){
		LetterSwap s = new LetterSwap();
		int c = s.swap("dog", "cat");
		System.out.println(c);
	}
}